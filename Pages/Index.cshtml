                                <input class="txtbox-2" type="text" id="ArtworkType" value="@Request.Form["ArtworkType"]" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-label">
                            <label for="CustomerDescription">Customer Description</label>
                        </div>
                        <div class="col">
                            <div class="col-txtbox-1">
