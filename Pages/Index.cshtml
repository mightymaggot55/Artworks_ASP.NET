@page
@model IndexModel
@{
    Validation.RequireField("EnquiryNo", "You must enter a Enquiry No");
    Validation.RequireField("EnquiryIssueNo", "You must enter a Issue No");
    ViewData["Title"] = "Home page";
    
    var EnquiryNo = "";
    var EnquiryIssueNo = "";
    var RequestedDate = "";
    var RequestedBy = "";
    var Customer = "";
    var CustomerContact = "";
    var CustomerPartNo = "";
    var ArtworkType = "";
    var CustomerDescription = "";
    var ProductID = "";
    var StrokeNo = "";
    var ComponentSpec = "";
    var ComponentNeck = "";
    var ComponentTool = "";
    var ColourPrefixOne = "";
    var ColourPrefixTwo = "";
    var Colour = "";
    var MasterbatchReference = "";
    var ScreenPassesRequested = "";
    var FoilPassesRequested = "";
    var DecorationStartDate = "";
    var SalesNotes = "";

    if (IsPost && Validation.IsValid())
    {
        var db = Database.Open();
        var insertSQL = "INSERT INTO Artworks (EnquiryNo, EnquiryIssueNo) VALUES (@0, @1, @2)";
        db.Execute(insertSQL, EnquiryNo, EnquiryIssueNo, RequestedDate, RequestedBy, Customer, 
            CustomerContact, CustomerPartNo, ArtworkType, CustomerDescription, ProductID, StrokeNo, ComponentSpec,
        ComponentNeck, ComponentTool, ColourPrefixOne, ColourPrefixTwo, Colour, MasterbatchReference, ScreenPassesRequested,
        FoilPassesRequested, DecorationStartDate, SalesNotes);

        //Response.Redirect("/Movies");

        EnquiryNo = Request.Form["EnquiryNo"];
        EnquiryIssueNo = Request.Form["EnquiryIssueNo"];
        RequestedDate = Request.Form["RequestedDate"];
        RequestedBy = Request.Form["RequestedBy"];
        Customer = Request.Form["Customer"];
        CustomerContact = Request.Form["CustomerContact"];
        CustomerPartNo = Request.Form["CustomerPartNo"];
        ArtworkType = Request.Form["ArtworkType"];
        CustomerDescription = Request.Form["CustomerDescription"];
        ProductID = Request.Form["ProductId"];
        StrokeNo = Request.Form["StrokeNo"];
        ComponentSpec = Request.Form["ComponentSpec"];
        ComponentNeck = Request.Form["ComponentNeck"];
        ComponentTool = Request.Form["ComponentTool"];
        ColourPrefixOne = Request.Form["ColourPrefixOne"];
        ColourPrefixTwo = Request.Form["ColourPrefixTwo"];
        Colour = Request.Form["Colour"];
        MasterbatchReference = Request.Form["MasterbatchReference"];
        ScreenPassesRequested = Request.Form["ScereenPassesRequestede"];
        FoilPassesRequested = Request.Form["FoilPassesRequested"];
        DecorationStartDate = Request.Form["DecorationStartDate"];
        SalesNotes = Request.Form["SalesNotes"];
    }

}

<div class="text-center">
    <h1 class="display-4">Artwork Home Page</h1>
    <p><a href="https://docs.microsoft.com/aspnet/core">Create a New Artwork Enquiry</a></p>
    <form method="post">
        <fieldset>
            <div class="txt-defaults">
                <div class="form">
                    <div class="row">
                        <div class="col-label">
                            <label for="Enquriy Reference">Enquiry Reference</label>
                        </div>
                        <div class="col">
                            <div class="col-txtbox-1">
                                <input class="txtbox-1" type="text" id="Enquiry_No" value="@Request.Form["EnquiryNo"]" />
                                @Html.ValidationMessage("EnquiryNo")
                                <label>/</label>
                                <input class="txtbox-1" type="text" id="Enquiry_Issue_No" value="@Request.Form["EnquiryIssueNo"]" />
                                @Html.ValidationMessage("EnquiryIssueNo")
                            </div>
                        </div>
                        <div class="col-label">
                        </div>
                        <div class="col">
                            <div class="col-txtbox-1">
                            </div>
                        </div>
                    </div>
                    <br /><br />

                    <div class="row">
                        <div class="col-label">
                            <label for="RequestedDate">Requested Date</label>
                        </div>
                        <div class="col">
                            <div class="col-txtbox-1">
                                <input class="txtbox-2" type="date" id="RequestedDate" value="@Request.Form["RequestedDate"]" />
                            </div>
                        </div>
                        <div class="col-label">
                            <label for="RequestedBy">Requested By</label>
                        </div>
