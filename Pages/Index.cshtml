                                <input class="txtbox-2" type="text" id="RequestedBy" value="@Request.Form["RequestedBy"]" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-label">
                            <label for="Customer">Customer</label>
                        </div>
                        <div class="col">
                            <div class="col-txtbox-1">
                                <input class="txtbox-2" type="text" id="Customer" value="@Request.Form["Customer"]" />
                            </div>
                        </div>
                        <div class="col-label">
                            <label for="CustomerContact">Customer Contact</label>
                        </div>
                        <div class="col">
                            <div class="col-txtbox-1">
                                <input class="txtbox-2" type="text" id="CustomerContact" value="@Request.Form["CustomerContact"]" />
                            </div>
